@model ElectronicsShop.ViewModels.CreateGalleryViewModel

@{
    ViewBag.Title = "Utwórz";
}

<h2>Utwórz</h2>


@using (Html.BeginForm("Create", "Galleries", FormMethod.Post)) 
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(d=>d.ProductId)
    <div class="form-horizontal">
        <h4>Galeria</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Gallery.Name,"Nazwa", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(d => d.Gallery.Name, new { @class = "form-control" })

                @Html.ValidationMessageFor(model => model.Gallery.Name, "", new {@class = "text-danger"})
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Zapisz" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Wróć", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
