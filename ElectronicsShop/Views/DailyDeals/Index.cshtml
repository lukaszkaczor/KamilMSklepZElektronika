@using ElectronicsShop.Models
@model IEnumerable<ElectronicsShop.Models.DbModels.DailyDeal>

@{
    ViewBag.Title = "Index";
}

<h2>Okazja dnia</h2>

@Html.Partial("_AdminMenu", ViewData["controllerName"] = ControllerList.DailyDeal.ControllerName)


<p>
    @Html.ActionLink("Utwórz", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Produkt
        </th>
        <th>
            Nowa cena
        </th>
        <th>
          Ilość
        </th>
        <th>
            Sprzedanych
        </th>
        <th>
            Data rozpoczęcia 
        </th>
        <th>
            Data zakończenia
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Product.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NewPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ItemsSold)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Start)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.End)
            </td>
            <td>
                @Html.ActionLink("Edytuj", "Edit", new { id = item.DailyDealId }) |
                @Html.ActionLink("Usuń", "Delete", new { id = item.DailyDealId })
            </td>
        </tr>
    }

</table>
