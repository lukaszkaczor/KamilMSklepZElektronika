@using ElectronicsShop.Models
@model IEnumerable<ElectronicsShop.Models.DbModels.Tag>

@{
    ViewBag.Title = ControllerList.Tags.Label;
    ViewBag.DisableSectionsMenu = true;
}

<h2>@ControllerList.Tags.Label</h2>

@Html.Partial("_AdminMenu", ViewData["controllerName"] = ControllerList.Tags.ControllerName)

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
