@using ElectronicsShop.Models
@model IEnumerable<ElectronicsShop.Models.DbModels.Brand>

@{
    ViewBag.Title = ControllerList.Brands.Label;
    ViewBag.DisableSectionsMenu = true;
}

<h2>@ControllerList.Brands.Label</h2>

@Html.Partial("_AdminMenu", ViewData["controllerName"] = ControllerList.Brands.ControllerName)

<p>
    @Html.ActionLink("Utwórz", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Zdjęcie
        </th>
        <th>
            Nazwa
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Image.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Edytuj", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Usuń", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
