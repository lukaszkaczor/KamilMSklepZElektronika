@using ElectronicsShop.Models
@model IEnumerable<ElectronicsShop.Models.DbModels.Category>

@{
    ViewBag.Title = ControllerList.Categories.Label;
    ViewBag.DisableSectionsMenu = true;
}

<h2>@ControllerList.Categories.Label</h2>

@Html.Partial("_AdminMenu", ViewData["controllerName"] = ControllerList.Categories.ControllerName)


<p>
    @Html.ActionLink("Utwórz", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Nazwa
        </th>
        <th>
            Sekcja
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Section.Name)
            </td>
            <td>
                @Html.ActionLink("Edytuj", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Szczegóły", "Details", new { id = item.Id }) |
                @Html.ActionLink("Usuń", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
